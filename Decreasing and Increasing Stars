#include <iostream>
#include <string>
using namespace std;
int main()
{
    int i = 1;
    int j = 1;
    while (i <= 5) {
        j = i;
        while (j <= 5) {
            cout << "*";
            j++;
        }
        cout << endl;
        i++;
    }
    {
        int i = 0;
        while (i < 5) {
            int j = 0;
            while (j <= i) {
                cout << "*";
                j++;
            }
            cout << endl;
            i++;
        }
        return 0;
    }
}
